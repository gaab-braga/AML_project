{
  "dashboard": {
    "id": null,
    "title": "AML Business Metrics",
    "tags": ["aml", "business", "metrics"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Total Transactions Processed",
        "type": "stat",
        "targets": [
          {
            "expr": "increase(aml_transactions_total[1h])",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Fraud Alerts Generated",
        "type": "stat",
        "targets": [
          {
            "expr": "increase(aml_fraud_alerts_total[1h])",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "orange",
                  "value": 10
                },
                {
                  "color": "red",
                  "value": 50
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 8,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Model Accuracy",
        "type": "stat",
        "targets": [
          {
            "expr": "aml_model_accuracy",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        },
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 16,
          "y": 0
        }
      },
      {
        "id": 4,
        "title": "False Positive Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "aml_false_positive_rate",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        },
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 5,
        "title": "Recall at K=100",
        "type": "stat",
        "targets": [
          {
            "expr": "aml_recall_at_k{k=\"100\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        },
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 8,
          "y": 8
        }
      },
      {
        "id": 6,
        "title": "Average Processing Time",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(aml_processing_duration_seconds_sum[5m]) / rate(aml_processing_duration_seconds_count[5m])",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 16,
          "y": 8
        }
      },
      {
        "id": 7,
        "title": "Transaction Volume Over Time",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(aml_transactions_total[5m])",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 8,
        "title": "Fraud Detection Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(aml_fraud_alerts_total[5m]) / rate(aml_transactions_total[5m]) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        }
      },
      {
        "id": 9,
        "title": "Model Performance Trends",
        "type": "graph",
        "targets": [
          {
            "expr": "aml_model_accuracy",
            "refId": "A",
            "legendFormat": "Accuracy"
          },
          {
            "expr": "aml_recall_at_k{k=\"100\"}",
            "refId": "B",
            "legendFormat": "Recall@100"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 24
        }
      },
      {
        "id": 10,
        "title": "Processing Time Distribution",
        "type": "heatmap",
        "targets": [
          {
            "expr": "rate(aml_processing_duration_seconds_bucket[5m])",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 24
        }
      },
      {
        "id": 11,
        "title": "Alert Severity Distribution",
        "type": "piechart",
        "targets": [
          {
            "expr": "increase(aml_alerts_total[1h])",
            "refId": "A",
            "legendFormat": "{{severity}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 32
        }
      },
      {
        "id": 12,
        "title": "Top Risk Categories",
        "type": "barchart",
        "targets": [
          {
            "expr": "topk(10, increase(aml_risk_category_total[1h]))",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 32
        }
      }
    ],
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "timepicker": {},
    "templating": {
      "list": []
    },
    "annotations": {
      "list": []
    },
    "refresh": "5m",
    "schemaVersion": 27,
    "version": 0,
    "links": []
  }
}