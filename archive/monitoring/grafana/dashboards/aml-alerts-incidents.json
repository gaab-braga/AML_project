{
  "dashboard": {
    "id": null,
    "title": "AML Alerts & Incidents",
    "tags": ["aml", "alerts", "incidents"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Active Alerts",
        "type": "table",
        "targets": [
          {
            "expr": "ALERTS{alertstate=\"firing\", alertname=~\"AML.*\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "displayMode": "table"
            }
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "alertname"
              },
              "properties": [
                {
                  "id": "displayName",
                  "value": "Alert Name"
                }
              ]
            },
            {
              "matcher": {
                "id": "byName",
                "options": "severity"
              },
              "properties": [
                {
                  "id": "displayName",
                  "value": "Severity"
                },
                {
                  "id": "mappings",
                  "value": {
                    "options": {
                      "critical": {
                        "color": "red",
                        "text": "Critical"
                      },
                      "warning": {
                        "color": "orange",
                        "text": "Warning"
                      },
                      "info": {
                        "color": "blue",
                        "text": "Info"
                      }
                    },
                    "type": "value"
                  }
                }
              ]
            }
          ]
        },
        "gridPos": {
          "h": 12,
          "w": 24,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Alert Trends (Last 24h)",
        "type": "graph",
        "targets": [
          {
            "expr": "increase(ALERTS{alertname=~\"AML.*\"}[1h])",
            "refId": "A",
            "legendFormat": "{{alertname}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 12
        }
      },
      {
        "id": 3,
        "title": "Alert Severity Distribution",
        "type": "piechart",
        "targets": [
          {
            "expr": "count by (severity) (ALERTS{alertstate=\"firing\", alertname=~\"AML.*\"})",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 12
        }
      },
      {
        "id": 4,
        "title": "System Health Score",
        "type": "gauge",
        "targets": [
          {
            "expr": "(1 - (count(ALERTS{alertstate=\"firing\", severity=\"critical\", alertname=~\"AML.*\"}) / 10)) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 100,
            "unit": "percent"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 0,
          "y": 20
        }
      },
      {
        "id": 5,
        "title": "API Error Rate Alert",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(http_requests_total{status=~\"5..\"}[5m]) / rate(http_requests_total[5m]) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "orange",
                  "value": 5
                },
                {
                  "color": "red",
                  "value": 10
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 8,
          "y": 20
        }
      },
      {
        "id": 6,
        "title": "High Latency Alert",
        "type": "stat",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "orange",
                  "value": 2
                },
                {
                  "color": "red",
                  "value": 5
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 16,
          "y": 20
        }
      },
      {
        "id": 7,
        "title": "Model Performance Alert",
        "type": "stat",
        "targets": [
          {
            "expr": "aml_model_accuracy",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "red",
                  "value": null
                },
                {
                  "color": "orange",
                  "value": 85
                },
                {
                  "color": "green",
                  "value": 90
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 0,
          "y": 28
        }
      },
      {
        "id": 8,
        "title": "Data Drift Alert",
        "type": "stat",
        "targets": [
          {
            "expr": "aml_data_drift_score",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "orange",
                  "value": 0.1
                },
                {
                  "color": "red",
                  "value": 0.2
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 8,
          "y": 28
        }
      },
      {
        "id": 9,
        "title": "Alert Response Time",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(alert_response_time_seconds_bucket[5m]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 16,
          "y": 28
        }
      }
    ],
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "timepicker": {},
    "templating": {
      "list": []
    },
    "annotations": {
      "list": []
    },
    "refresh": "30s",
    "schemaVersion": 27,
    "version": 0,
    "links": []
  }
}